<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"   xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detailedActivityIV"
        android:layout_width="213dp"
        android:layout_height="152dp"
        android:contentDescription="Rappresentation"
        android:translationX="10dp"
        android:translationY="100dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/detailedActivityTV"
        android:layout_width="429dp"
        android:layout_height="66dp"
        android:contentDescription="Description"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationY="50dp" />

    
    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/numberSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="numberSpecies"
        android:text="number species"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:translationX="250dp"
        android:translationY="110dp" />

    <TextView
        android:id="@+id/classification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="classification"
        android:text="classification"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:translationX="250dp"
        android:translationY="140dp" />

    <TextView
        android:id="@+id/averageLife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="averageLife"
        android:text="averageLife"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:translationX="250dp"
        android:translationY="170dp" />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="position"
        android:text="position"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:translationX="250dp"
        android:translationY="200dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>